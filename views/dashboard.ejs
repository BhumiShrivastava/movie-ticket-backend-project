<style>
    .maincontainer {
        width: 100vw;
        height: 100vh;
        background: #2786c588;
        display: 'flex';
        flex-direction: column;
    }

    .box {
        width: 100%;
        height: 50px;

        background: #273c75;
    }

    .appbarStyle {
        width: 98%;
        display: flex;
        align-items: center;
        background-color: '#898989';

    }

    .logoStyle {
        font-family: Kanit;
        font-size: 32px;
        font-weight: bold;
        color: #fff;
        margin-left: 1%;
    }

    .logoutStyle {
        font-family: Kanit;
        font-size: 16px;
        font-weight: bold;
        color: #fff;
        margin-left: auto;
    }

    .sideBarLeft {
        width: 200px;
        height: 100vh;
        /* full screen height */
        background: #2f3640;
        color: white;
        display: flex;
        flex-direction: column;
        padding-top: 20px;
        box-shadow: 2px 0px 8px rgba(0, 0, 0, 0.2);
    }

    .adminTextStyle {
        font-family: Kanit;
        font-size: 16px;
        font-weight: bold;
        display: flex;
        justify-content: center;

    }

    .contactTextStyle {
        font-family: Kanit;
        font-size: 12px;
        font-weight: bold;
        display: flex;
        align-items: center;
        color: cornflowerblue;
        flex-direction: column;

    }

    .menuStyle {
        font-family: Kanit;
        font-size: 16px;
        font-weight: bold;
        display: flex;
        margin-left: 40px;
        flex-direction: column;
        margin-top: 20px;
    }

    .itemstyle {
        margin-top: 20px;
    }

    .contentStyle {
        margin: 20px;
        width: 100%;
    }
</style>


<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@300&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/99fc0d74eb.js" crossorigin="anonymous"></script>

</head>
<div class="maincontainer">
    <div class="box">

        <div class="appbarStyle">

            <span class="logoStyle">
                <img src="/images/movie world-logo-transparent.png"
                    style="width: 70px; height: 60px; font-family: italic;">
                Movie World
            </span>
            <span class="logoutStyle">Logout</span>
        </div>
    </div>



    <div style="display: flex; flex-direction: row; height:90%; ">

        <div class="sideBarLeft">
            <div style="display: flex; align-items: center; justify-content: center;margin: 6px;">
                <img src="/images/<%=data.picture%>" style="width:70px;height: 70px; border-radius: 35px;" />
            </div>
            <div class="adminTextStyle">
                <%=data.adminname%>
            </div>
            <div class="contactTextStyle">
                <div>
                    <%=data.email%>
                </div>
                <div>+91<%=data.mobileno%>
                </div>
            </div>
            <div class="menuStyle">
                <div class="itemstyle"><i class="fa-solid fa-cart-plus"></i> <a
                        style="text-decoration: none; color: white;" href="/movie/movieinterface" target="mw">New
                        Movie</a></div>
                <div class="itemstyle"><i class="fa-solid fa-rectangle-list"></i> <a
                        style="text-decoration: none; color: white;" href="/movie/displayallmovie" target="mw">Movie
                        List</a></div>
                <div class="itemstyle"><i class="fa-solid fa-right-from-bracket"></i> <a
                        style="text-decoration: none; color: white;" href="/admin/adminlogout">Logout</a></div>

            </div>
        </div>

      


        <div class="contentStyle">
            <iframe name="mw" frameborder="0" width="100%" height="100%" scrolling="no"></iframe>

        </div>
    </div>
</div>

</html>