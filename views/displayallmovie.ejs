<html>
    <head>
        <link href="/stylesheets/style.css" rel="stylesheet"/>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Edu+TAS+Beginner:wght@500&family=Gabarito&family=Oswald:wght@200&display=swap" rel="stylesheet">
    </head>
    <body>
    <div class="maincontainer">
        <div class="boxtable">
    
                <div class="col-12" headstyle centerstyle>
                <img src="/images/movie.png" width="5%">
                <span>Movie Register</span>  
                <img src ="/images/addmovie.jpeg" width=35 style="margin-left: 79%;"> 
               </div>
    
    <%if(status){%>
        <thead>
            <table class="table table-striped-columns" >
            <tr>

                <th>Sn</th>
                <th>State ID</th>
                <th>City ID</th>
                <th>Cinema ID</th>
                <th>Screen ID</th>
                <th>Movie Name</th>
                <th>Movie Description</th>
                <th>Actor Name</th>
                <th>Actoress Name</th>
                <th>Singer Name</th>
                <th>Release Date</th>
                <th>Ticket Price</th>
                <th>Status</th>
                <th>Poster</th>
                <th>Update</th>
            </tr>
        </thead>
        <tbody>
            <% data.map((item,index)=>{ %>
                <tr>
                 <td><%=(index+1)%></td>   
                 <td><%=item.stateid%>/<br><%=item.statename%></td>
                 <td><%=item.cityid%>/<br><%=item.cityname%></td>
                 <td><%=item.cinemaid%>/<br><%=item.cinemaname%></td>
                 <td><%=item.screenid%>/<br><%=item.screenname%></td>
                 <td><%=item.moviename%></td>
                 <td><%=item.description%></td>
                 <td><%=item.actor%></td>
                 <td><%=item.actress%></td>
                 <td><%=item.singer%></td>
                 <td><%=item.releasedate%></td>
                 <td><%=item.price%></td>
                 <td><%=item.status%></td>
                 <td><a href="/movie/show_picture?movieid=<%=item.movieid%>&moviename=<%=item.moviename%>&picture=<%=item.poster%>" style="text-decoration: none; cursor: pointer;"><img src="/images/<%=item.poster %>" width="50" height="50"></a></td>
                 <td><a href="/movie/display_movie_byid?movieid=<%=item.movieid%>" style="text-decoration: none; cursor: pointer;">Edit/Delete</a></td>
                 <%})%>
            </tr>
        </tbody>
    </table>
    
   <% }
   else{%>
   <h1><%=message%></h1>
   <%}%>
    </div>
    </div>
    </body>
</html>